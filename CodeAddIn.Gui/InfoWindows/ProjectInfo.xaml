<Window x:Class="CodeAddIn.Gui.InfoWindows.ProjectInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeAddIn.Gui.InfoWindows"
        xmlns:designTime="clr-namespace:CodeAddIn.Gui.DesignTime"
        mc:Ignorable="d"
        Title="ProjectInfo" Height="450" Width="800" d:DataContext="{x:Static designTime:DesignTimeData.ProjectInfoVm}">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="30"/>
        <RowDefinition/>
    </Grid.RowDefinitions>
        <TextBlock Text="{Binding ProjectName}" Margin="4"/>
    </Grid>
</Window>
