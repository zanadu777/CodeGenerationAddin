<Window x:Class="CodeAddIn.Gui.TextDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeAddIn.Gui"
        mc:Ignorable="d"
        Title="TextDisplay" Height="450" Width="800">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height ="30"/>
        <RowDefinition/>
      </Grid.RowDefinitions>

      <TextBox x:Name="txtDisplay"  Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True"></TextBox>
        
    </Grid>
</Window>
